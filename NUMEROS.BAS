5 REM * numeros *
10 SCREEN 0 : COLOR 0,3 : WIDTH 40 : CLS
20 INPUT "number of digits (1 to 9)"; N
30 COLOR 4 : LOCATE 2,1 : FOR I=0 TO 5*40-1 : PRINT "#";: NEXT I
40 LOCATE 13,1 : FOR I=0 TO 12*40-1 : PRINT "#";: NEXT I
50 REM LINE (0,105)-(255,105)
60 COLOR 1 : LET CNT=1
70 DIM D(N) : RANDOMIZE TIMER
80 FOR A=1 TO N
90 LET B=INT(RND*10)
100 IF (B=0) OR (B>N) THEN GOTO 90
110 FOR I=1 TO A-1
120 IF B=D(I) THEN GOTO 90
130 NEXT I
140 LET D(A)=B
150 LOCATE 7,3*A+(9-N)*1.5 : PRINT A
160 NEXT A
170 FOR I=1 TO N
180 LOCATE 10,3*I+(9-N)*1.5 : PRINT D(I)
190 NEXT I
200 LOCATE 12,17 : PRINT "   " : LOCATE 12,1 : INPUT "change which number";I
210 IF (I>N) OR (I<1) THEN GOTO 200
220 LOCATE 15,2 : PRINT "num. of attempts = "; CNT
230 LET CNT=CNT+1
240 LET I1=INT(N/2+1)-INT(I/2+.5)
250 FOR J=1 TO I1
260 LET INTER=D(N+1-J)
270 LET D(N+1-J)=D(I+J-1)
280 LET D(I+J-1)=INTER
290 NEXT J
300 FOR K=1 TO N
310 IF D(K)<>K THEN GOTO 170
320 NEXT K
330 CLS : LOCATE 15,1 : PRINT "---- game over ----"
340 LOCATE 17,1 : PRINT "number of tries = "; CNT-1
350 INPUT "play again (y/n)";S$
355 ERASE D
360 IF (S$="y") OR (S$="Y") THEN GOTO 10
